<h1>New game</h1>

<div class= "container">
  <% @letters.each do |letter| %>
    <div class="blue-card"><%= letter %></div>
  <% end %>
</div>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <label for="word">What's the longest word you can find ?</label>
  <input type="text" name ="guess">
  <button type="submit" class="btn btn-primary">Play</button>
</form>
